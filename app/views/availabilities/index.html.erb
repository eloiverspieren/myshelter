<p id="notice"><%= notice %></p>

<h1>Availabilities</h1>

<table>
  <thead>
    <tr>
      <th>Start day</th>
      <th>End day</th>
      <th>Capacity</th>
      <th>Refuge</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
      <tr>
        <td><%= availability.start_day %></td>
        <td><%= availability.end_day %></td>
        <td><%= availability.capacity %></td>
        <td><%= availability.refuge %></td>
        <td><%= link_to 'Show', availability %></td>
        <% if policy(availability).edit? %>
          <td><%= link_to 'Edit', edit_availability_path(availability) %></td>
        <% end %>
        <td><%= link_to 'Destroy', availability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

