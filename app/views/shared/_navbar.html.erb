<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->


      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.profile && current_user.profile.photo %>
            <% avatar_url = current_user.profile.photo %>
          <% else %>
            <% avatar_url = current_user.facebook_picture_url || "https://www.latoilescoute.net/IMG/jpg/visualbug-facebook1.jpg" %>
            <%end%>
            <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <% if current_user && current_user.profile != nil %>
                <%= link_to profile_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              <% else %>
                <%= link_to new_profile_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <%end%>
              <%end%>
            </li>
            <li>
              <%= link_to "/" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
            <%= link_to my_bookings_path do %>
                <i class="fa fa-calendar"></i>  <%= t(".profile", default: "My Bookings") %>
              <% end %>
            </li>
            <% if current_user.refuges != nil %>
              <li>
                <%= link_to my_refuges_path do %>
                  <i class="fa fa-hotel"></i>  <%= t(".profile", default: "My Shelters") %>
                <% end %>
              </li>
            <%else%>
              <li>
                <%= link_to new_refuge_path do %>
                  <i class="fa fa-hotel"></i>  <%= t(".profile", default: "Become Host") %>
                <% end %>
              </li>
            <%end%>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <i class="fa fa fa-user"></i>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% end %>

    <!-- Button (call-to-action) -->

  </div>

 <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <% if user_signed_in? %>
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
              <% if current_user && current_user.profile != nil %>
                <%= link_to profile_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              <% else %>
                <%= link_to new_profile_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <%end%>
              <%end%>
            </li>
            <li>
              <%= link_to "/" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
            <%= link_to my_bookings_path do %>
                <i class="fa fa-calendar"></i>  <%= t(".profile", default: "My Bookings") %>
              <% end %>
            </li>
            <% if current_user.refuges != nil %>
              <li>
                <%= link_to my_refuges_path do %>
                  <i class="fa fa-hotel"></i>  <%= t(".profile", default: "My Shelters") %>
                <% end %>
              </li>
            <%else%>
              <li>
                <%= link_to new_refuge_path do %>
                  <i class="fa fa-hotel"></i>  <%= t(".profile", default: "Become Host") %>
                <% end %>
              </li>
            <%end%>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
      </ul>
    </div>
    <% else %>

      <!-- Login text link -->
      <i class="fa fa fa-user"></i>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%end%>
  </div>
</div>

