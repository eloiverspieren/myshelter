
<p id="notice"><%= notice %></p>
<section class="mainContentSection packagesSection">
  <div class="container">
    <div class="row">
      <% @refuges.each do |refuge| %>
      <div class="col-sm-4 col-xs-12">
        <div class="thumbnail deals">
        <%= cl_image_tag(refuge.photo,
      width: 400, height: 300, crop: :fill) %>
          <a href="single-package-right-sidebar.html" class="pageLink"></a>
          <div class="discountInfo">
            <ul class="list-inline rating homePage">
              <li><i class="fa fa-star" aria-hidden="true"></i></li>
              <li><i class="fa fa-star" aria-hidden="true"></i></li>
              <li><i class="fa fa-star" aria-hidden="true"></i></li>
              <li><i class="fa fa-star" aria-hidden="true"></i></li>
              <li><i class="fa fa-star" aria-hidden="true"></i></li>
            </ul>
            <ul class="list-inline duration">
              <li><%= refuge.altitude %>meters</li>
              <li><%= refuge.capacity %>people</li>
              <li><%= refuge.day_price%>â‚¬</li>
            </ul>
          </div>
          <div class="caption">
            <h4><a href="single-package-right-sidebar.html" class="captionTitle"><%= refuge.name %></a></h4>
            <h5><%= refuge.address %></h5>
            <div class="detailsInfo">
              <br>
               <%= link_to 'More About this Shelter', refuge, :class => "btn btn-primary btn"%>
            </div>
          </div>
        <% if policy(refuge).edit? %>
          <td><%= link_to 'Edit', edit_refuge_path(refuge) %></td>
        <% end %>
        <% if policy(refuge).destroy? %>
        <td><%= link_to 'Destroy', refuge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </div>
      </div>
      <%end%>
    </div>
  </div>
  <%= link_to 'New Refuge', new_refuge_path , :class => "btn btn-primary" %>

</section>


