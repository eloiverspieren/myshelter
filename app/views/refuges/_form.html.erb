<%= simple_form_for(@refuge) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :picture %>
    <%= f.input :capacity %>
    <%= f.input :address %>
    <%= f.input :day_price %>
    <%= f.input :description %>
    <%= f.input :lat %>
    <%= f.input :lon %>
    <%= f.input :altitude %>
    <%= f.input :range %>
    <%= f.input :department %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
