<section class="mainContentSection">
  <div class="container">
    <div class="row">
    <div class="col-sm-8 col-xs-12">
      <div class="infoTitle">
        <h2>Infos about your Shelter</h2>
      </div>
      <div class="bookingForm">
        <%= simple_form_for(@refuge) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <div class="row">
            <div class="form-group col-sm-6 col-xs-12">
              <%= f.input :name %>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
              <%= f.input :department %>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
              <%= f.input :address %>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
$              <%= f.input :price_cents %>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
              <%= f.input :capacity %>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
              <%= f.input :altitude %>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
              <%= f.input :range %>
            </div>
            <div class="form-group col-xs-12">
              <%= f.input :description %>
            </div>
            <div class="checkbox col-xs-12">
              <label>
                <input type="checkbox"> I have read and accept the <a href="#">terms and conditions</a>
              </label>
            </div>
          </div>
          <div class="form-actions">
              <%= f.button :submit %>
            </div>
        </form>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>
</section>




