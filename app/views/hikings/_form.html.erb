<%= simple_form_for(@hiking) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :difficulty %>
    <%= f.input :range %>
    <%= f.input :description %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
