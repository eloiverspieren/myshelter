


<div class="banner-login" style="background: url('https://hd.unsplash.com/photo-1470168887220-08d7ba3cce1f');">


<div class="col-xs-12 col-sm-3 col-sm-offset-6" id="login">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
  </div><br>

  <div class="form-actions" id="forgot">
    <%= f.button :submit, "Send me password instructions", class: "btn btn-warning" %>
  </div>
<% end %>





</div>
</div>



