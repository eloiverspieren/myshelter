<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Start day</th>
      <th>End day</th>
      <th>Hikers nb</th>
      <th>User</th>
      <th>Refuge</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.start_day %></td>
        <td><%= booking.end_day %></td>
        <td><%= booking.hikers_nb %></td>
        <td><%= booking.user %></td>
        <td><%= booking.refuge %></td>
        <td><%= link_to 'Show', booking %></td>
        <% if policy(booking).edit? %>
          <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <% end %>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

