<p id="notice"><%= notice %></p>

<section class="mainContentSection packagesSection">
  <div class="container">
    <% @bookings.each do |booking| %>
          <div class="row">
            <div class="col-sm-8 col-xs-12 col-sm-offset-2">
              <div class="row sidebarPage">
                <div class="col-xs-12">
                  <div class="media packagesList">
                    <a class="media-left fancybox-pop" href="img/packages/package-list-01.png">
                      <img class="media-object" src="refugedupourri.jpg" alt="marche PO">
                    </a>
                    <div class="media-body">
                      <div class="bodyLeft">
                        <h4 class="media-heading"><a href="single-package-right-sidebar.html"><%= booking.refuge.name %></a></h4>
                        <div class="countryRating">
                          <span><%=booking.refuge.address%></span>
                          <ul class="list-inline rating">
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                          </ul>
                        </div>
                        <ul class="list-inline detailsBtn">
                          <li><span class="textInfo"><i class="fa fa-calendar" aria-hidden="true"></i> <%= booking.start_day %></span></li>
                          <li><span class="textInfo"><i class="fa fa-clock-o" aria-hidden="true"></i> <%= (booking.end_day - booking.start_day) %> Days</span></li>
                          <li><span class="textInfo"><i class="fa fa-male" aria-hidden="true"></i> <%= booking.hikers_nb %> Hikers</span></li><br><br>
                          <% if booking.refuge.user == current_user %>
                          <%= link_to "Accept", "", :class => "btn btn-success" %>
                          <%= link_to "Reject", "", :class => "btn btn-danger" %>
                          <%else%>
                          <%= link_to "Not accepted yet", "", :class => "btn btn-danger" %>
                          <%end%>
                         </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
</section>
